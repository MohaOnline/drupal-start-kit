 *   TRUE if we use real names 
 */
function _sign_for_acknowledgement_use_full_name($t1, $t2) {
  if ($t1 == NULL || $t1 == '' || $t2 == NULL || $t2 == '') {
    return FALSE;
  }

  return (db_table_exists($t1) && db_table_exists($t2));
}

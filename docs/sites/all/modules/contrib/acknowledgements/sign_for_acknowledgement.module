/**
 * Implements hook_form().
 */
function sign_for_acknowledgement_view_form($form, &$form_state, $view_name, $display_id)
{
  $form['sign_for_acknowledgement_views'] = array(
    '#type' => 'fieldset', 
    '#title' => sprintf(t("Hide message '%s'"), filter_xss(variable_get('sign_for_acknowledgement_marked', t('The documents marked with *** are to be signed.')))),
    '#weight' => 0, 
    '#collapsible' => FALSE, 
  );
  $form_state['view'] = views_get_view($view_name);
  foreach ($form_state['view']->display as $key => $value) {
    $form['sign_for_acknowledgement_views'][$key] = array (
      '#type' => 'checkbox',
      '#title' => $value->display_title,
    );
    $varname = 'sfa_' . $view_name . '_' . $key;
    if (variable_get($varname, FALSE)) {
        $form['sign_for_acknowledgement_views'][$key]['#attributes'] = array('checked' => 'checked');
    }
  }
  
  $form['sign_for_acknowledgement_views_filter'] = array(
    '#type' => 'fieldset', 
    '#title' => t("Don't hide nodes that aren't to be signed by filtered user"),
    '#weight' => 0, 
    '#collapsible' => FALSE, 
  );
  foreach ($form_state['view']->display as $key => $value) {
    $form['sign_for_acknowledgement_views_filter'][$key.'_node'] = array (
      '#type' => 'checkbox',
      '#title' => $value->display_title,
    );
    $varname = 'nosfa_' . $view_name . '_' . $key;
    if (variable_get($varname, FALSE)) {
        $form['sign_for_acknowledgement_views_filter'][$key.'_node']['#attributes'] = array('checked' => 'checked');
    }
  }
  
  if (!function_exists('views_ui_standard_form_buttons')) {
    require_once('sites/all/modules/views/includes/admin.inc');
  }

  views_ui_standard_form_buttons($form, $form_state, 'sign_for_acknowledgement_view_form');
  return $form;
}

/**
 * Implements hook_submit().
 */
function sign_for_acknowledgement_view_form_submit($form, &$form_state) {
  foreach ($form_state['view']->display as $key => $value) {
    $varname = 'sfa_' . $form_state['view']->name . '_' . $key;
    if (isset($form_state['values'][$key])) {
      variable_set($varname, $form_state['values'][$key]);
    }
    $varname = 'nosfa_' . $form_state['view']->name . '_' . $key;
    if (isset($form_state['values'][$key.'_node'])) {
      variable_set($varname, $form_state['values'][$key.'_node']);
    }
  }
  ctools_object_cache_clear_all('view', $form_state['view']->name);
  $form_state['redirect'] = 'admin/structure/views/view/' . $form_state['view']->name . '/edit';
}

/**
 * Checks the node type.
 * @return boolean (TRUE if compliant) 
 */ 
function _sign_for_acknowledgement_check_node_type() {
  if (!(user_access('view acknowledgements table'))) {
    return FALSE;
  }
  if (arg(0) == 'node' && is_numeric(arg(1))) {
    $nodeid = arg(1);
    return _sign_for_acknowledgement_applies_to_bundle(node_load($nodeid)->type);
  }
  return FALSE;
}
/**
 * check if $form_id is this module compliant
 *
 * @param string $form_id
 * @return boolean (TRUE if compliant)
 */
function _sign_for_acknowledgement_check_formid($form_id) {
  $apply_to = variable_get('sign_for_acknowledgement_node_types', array('article' => 'article'));

  foreach ($apply_to as $key => $value) {
    if ($key === $value && $key . '_node_form' === $form_id) {
      return TRUE;
    }
  }
  return FALSE;
}  
/**
 * @return array, drupal roles list (excluding anonymous and authenthicated users).
 */  
function _sign_for_acknowledgement_get_roles($all = TRUE) {
  $roles = array_map('check_plain', user_roles(TRUE));
  $my_roles = array();
  foreach($roles as $key => $role) {
    $my_roles[$role] = ($role == 'administrator' || $all)? $role : '';
  }
  return $my_roles;
}
/**
 * Add "single user enable" form while creating/editing a node
 */ 
function _sign_for_acknowledgement_users () {
  // thanks to pvasener for patch
  $users = db_query('SELECT uid, name FROM {users} WHERE uid > 0 AND status = 1 ORDER BY name ASC')->fetchAllKeyed(0, 1);    
  return $users;
}
/**
 * Handles "enable users" form in node editing form.
 */ 
function _sign_for_acknowledgement_users_after_build($form, &$form_state) {
  $user_list = unserialize($form['enable_users'][LANGUAGE_NONE]['0']['value']['#value']);
  if (empty($user_list)) {
    $user_list = array();
  }

  if (isset($form_state['triggering_element']) && $form_state['triggering_element']['#value'] == $form['enable_roles']['users']['delete_button']['#value']) {
    $deletions = $form['enable_roles']['users']['deletions']['#value'];
    foreach ($deletions as $uid) {
      unset($user_list[$uid]);
      unset($form['enable_roles']['users']['deletions']['#value'][$uid]);
    }
  }
  elseif (isset($form_state['triggering_element']) && $form_state['triggering_element']['#value'] == $form['enable_roles']['users']['add_button']['#value'] && !empty($form['enable_roles']['users']['add']['#value'])) {
    $user = db_query("SELECT uid, name FROM {users} WHERE name = :name", array(
      'name' => $form['enable_roles']['users']['add']['#value'],
    ))->fetchObject();
    if (!$user || !$user->uid) {
      form_error($form['enable_roles']['users']['add'], t("Invalid user specified."));
    }
    else {
      $user_list[$user->uid] = $user->name;
      $form['enable_roles']['users']['add']['#value'] = NULL;
    }
  }
  
  if (count($user_list) != 0) {
    $form['enable_roles']['users']['deletions']['#type'] = 'checkboxes';
    $form['enable_roles']['users']['deletions']['#title'] = t("Enabled users");
    $form['enable_roles']['users']['deletions']['#options'] = $user_list;
    $form['enable_roles']['users']['deletions']['#value'] = array(); // don't carry value through.
    $form['enable_roles']['users']['deletions'] = form_builder($form['form_id'], $form['enable_roles']['users']['deletions'], $form_state);
  }
  else {
    $form['enable_roles']['users']['delete_button']['#attributes'] = array(
      'style' => 'display:none',
    );
  }
  $serialized = serialize($user_list); 
  $form_state['enable_users'][LANGUAGE_NONE]['0']['value']['#default_value'] = 
  $form['enable_users'][LANGUAGE_NONE]['0']['value']['#value'] = 
  $serialized;
  $form_state['values']['field_user_selection'][LANGUAGE_NONE] = array ( '0' => array ('value' => $serialized) );
  return $form;
}
/**
 * Display users selection list.  
 */
function _sign_for_acknowledgement_users_selection(&$form) {
  $form['enable_users'][LANGUAGE_NONE]['#options'] = _sign_for_acknowledgement_users();
  $form['enable_users'][LANGUAGE_NONE]['#size'] = 10;
  if  (variable_get('sign_for_acknowledgement_email_to_users', TRUE) == FALSE) {
    $form['email_users']['#access'] = 0;
    return;
  }
}
/**
 * populate array with users' ids (users).
 * 
 */
function _sign_for_acknowledgement_email_from_users(&$emails, $enable_users, $nid) {
  if (!(isset($enable_users[LANGUAGE_NONE]))) {
    return;
  }
  foreach($enable_users[LANGUAGE_NONE] as $my_user) {
    $uid = $my_user['value'];
    if (in_array($uid, $emails)) {
      continue;
    }
    if (_sign_for_acknowledgement_email_already_sent($uid, $nid)) {
      continue;
    }
    $emails[] = $uid;
  }
}
/**
 * populate array with users' ids (roles).
 * 
 */
function _sign_for_acknowledgement_email_from_roles(&$emails, $enable_roles, $nid) {
  if (!(isset($enable_roles[LANGUAGE_NONE]))) {
    return;
  }
  foreach($enable_roles[LANGUAGE_NONE] as $array) {
    foreach($array as $value) {
      if (!(isset($value))) {
        continue;
      }
      $rolename = $value == t('authenticated user') ? 'authenticated user' : $value;
      $role = user_role_load_by_name($rolename);
      if (!$role) {
        continue;
      }
      $query = 'SELECT ur.uid FROM {users_roles} AS ur WHERE ur.rid = :rid';
      $result = db_query($query, array(':rid' => $role->rid));
      $uids = $result->fetchCol();
      foreach ($uids as $uid) {
        if (in_array($uid, $emails)) {
          continue;
        }
        if (_sign_for_acknowledgement_email_already_sent($uid, $nid)) {
          continue;
        }
        $emails[] = $uid;
      }
    }
  }
}
/**
 * build to string with users emails
 */
function _sign_for_acknowledgement_build_receivers($uids) {
  $users = user_load_multiple($uids);
  $result = '';
  foreach ($users as $user) {
    if ($user->status == 0) {
      continue;
    }
    if (!empty($result)) {
      $result .= ', ';
    }
    $result .= $user->mail;
  }
  return $result;
}
/**
 * keep track of sent emails
 */
function _sign_for_acknowledgement_save_email_sent($uids, $nid) {
  foreach ($uids as $uid) {
    db_insert('sign_for_acknowledgement_email')
    ->fields(array(
      'node_id' => $nid,
      'user_id' => $uid,
      'mydate' => time(),
      ))
    ->execute();
  }
}
function _sign_for_acknowledgement_email_already_sent($userid, $nodeid) {
  $result = db_query('SELECT * FROM {sign_for_acknowledgement_email} WHERE node_id = :nid AND user_id = :uid',
  array(':nid' => $nodeid, ':uid' => $userid));
  return ($result->rowCount() > 0);
}
/**
 * check users and send notification email
 */
function _sign_for_acknowledgement_node_email($node) {
  static $count = 1;
  if ($count++ > 1) {
    return;
  }
  $no_signature = FALSE;
  if (isset($node->delete_acknowledgements) && $node->delete_acknowledgements === 1) {
    db_delete('sign_for_acknowledgement_email')
    ->condition('node_id', $node->nid)
    ->execute();
  }

  $emails = array();
  if (property_exists($node, 'email_roles') && $node->email_roles['und'][0]['value']) {
    _sign_for_acknowledgement_email_from_roles($emails, $node->enable_roles, $node->nid);
  }
  if (property_exists($node, 'email_users') && $node->email_users['und'][0]['value']) {
    _sign_for_acknowledgement_email_from_users($emails, $node->enable_users, $node->nid);
  }
  if (empty($emails) && property_exists($node, 'enable_roles_nosign')) {
    _sign_for_acknowledgement_email_from_roles($emails, $node->enable_roles_nosign, $node->nid);
    $no_signature = TRUE;
  }

  if (empty($emails)) {
    return; // no user found, return
  }
  // send_email...
  $params = array();
  $params['subject'] = html_entity_decode(token_replace(variable_get($no_signature? 'sign_for_acknowledgement_email_subject_nosign': 'sign_for_acknowledgement_email_subject', 'Notification from [site:name]'), array('node' => $node)));
  $body_sign = 
'On [node:created:short], a new [node:type] titled "[node:title]" was published.
Please, remember to sign for acknowledgement before [node:expire-date:long].
Page is available here [site:url]node/[node:nid]

Best regards,
[site:name]
';
  $body_nosign = 
'On [node:created:short], a new [node:type] titled "[node:title]" was published.
Please, remember to read it.
Page is available here [site:url]node/[node:nid]

Best regards,
[site:name]
';
  $params['body'] = html_entity_decode(token_replace(variable_get($no_signature? 'sign_for_acknowledgement_email_body_nosign': 'sign_for_acknowledgement_email_body', $no_signature? $body_nosign : $body_sign), array('node' => $node)));
  $params['headers'] = array('Bcc' => _sign_for_acknowledgement_build_receivers($emails),);

  $to = variable_get('sign_for_acknowledgement_email_to', 0) == 1 ? variable_get('site_mail', 'generic@nowhere.com') : 'undisclosed-recipients:;';
  drupal_mail('sign_for_acknowledgement', 'notify', $to, language_default(), $params);
  drupal_set_message(t('Selected users have been notified via e-mail'));
  _sign_for_acknowledgement_save_email_sent($emails, $node->nid);
}
/**
 * Implements hook_node_insert().  
 */
function sign_for_acknowledgement_node_insert($node) {
  if (!(_sign_for_acknowledgement_applies_to_bundle($node->type))) {
    return;
  }
  _sign_for_acknowledgement_node_email($node);
}
/**
 * Implements hook_mail().  
 */
function sign_for_acknowledgement_mail($key, &$message, $params) {
  switch($key) {
    case 'notify':
      $message['subject'] = $params['subject'];
      $message['body'][] = $params['body'];
      $message['headers'] += $params['headers'];
      break;
  }
}
/**
 * Implements hook_form_alter().  
 */
function sign_for_acknowledgement_form_alter(&$form, &$form_state, $form_id) {
  if (isset($form['field_sfa_status'])) {
    $form['field_sfa_status']['#access'] = 0;
  }
  if (!_sign_for_acknowledgement_check_formid($form_id)) {
    if (arg(0) != 'node') {
      return;
    }
    if (isset($form['enable_roles'])) {
      $form['enable_roles']['#access'] = 0;
    }
    if (isset($form['enable_users'])) {
      $form['enable_users']['#access'] = 0;
    }
    if (isset($form['email_roles'])) {
      $form['email_roles']['#access'] = 0;
    }
    if (isset($form['email_users'])) {
      $form['email_users']['#access'] = 0;
    }
    if (isset($form['expire_date'])) {
      $form['expire_date']['#access'] = 0;
    }
    if (isset($form['alternate_form'])) {
      $form['alternate_form']['#access'] = 0;
    }
    if (isset($form['alternate_form_multiselect'])) {
      $form['alternate_form_multiselect']['#access'] = 0;
    }
    if (isset($form['alternate_form_text'])) {
      $form['alternate_form_text']['#access'] = 0;
    }
    if (isset($form['annotation_field'])) {
      $form['annotation_field']['#access'] = 0;
    }
    if (isset($form['annotation_field_required'])) {
      $form['annotation_field_required']['#access'] = 0;
    }
    return;
  }
  if (!(isset($form['enable_roles']))) {
    return;
  }
//  dsm($form);dsm($form_state); 
  $my_roles = variable_get('sign_for_acknowledgement_roles',_sign_for_acknowledgement_get_roles(FALSE));
  $my_roles_filtered = array();
  if (variable_get('sign_for_acknowledgement_use_default_roles', FALSE)) {
    foreach ($my_roles as $key => $value) {
      if ($key === $value) {
        $my_roles_filtered[$key] = $value;
      }
    }
    $form['enable_roles'][LANGUAGE_NONE]['#options'] = $my_roles_filtered;
    if (isset($form['enable_roles_nosign'])) {
      $form['enable_roles_nosign'][LANGUAGE_NONE]['#options'] = $my_roles_filtered;
    }
  }
  if (variable_get('sign_for_acknowledgement_email_to_roles', TRUE) == FALSE) { // check if email to roles is not activated
    $form['email_roles']['#access'] = 0;
  }
  if (arg(0) == 'node' && arg(1) == 'add') {
    // blank all checkboxes if "only default roles" is set...
    $form['enable_roles'][LANGUAGE_NONE]['#default_value'] = variable_get('sign_for_acknowledgement_use_default_roles', FALSE) ? array() : $my_roles;
    if (variable_get('sign_for_acknowledgement_use_single_user', TRUE) == FALSE) {
      $form['enable_users']['#access'] = 0;
      $form['email_users']['#access'] = 0;
    }
    else {
      _sign_for_acknowledgement_users_selection($form);
    }
    return;
  }
  if (arg(2) != 'edit') {
    return;
  }
  $form['sign_for_acknowledgement_content'] = array(
    '#type' => 'fieldset',
    '#title' => t('Delete exsisting acknowledgements?'),
    '#description' => t('If you modify this node in such a way that all affected users need to re-acknowledge, please check this checkbox.'),
  );
  $form['sign_for_acknowledgement_content']['delete_acknowledgements'] = array (
    '#type' => 'checkbox',
    '#title' => t('delete acknowledgements'),
    //'#attributes' => array('checked' => 'checked'),
  );
  if (variable_get('sign_for_acknowledgement_use_single_user', TRUE) == FALSE) {
    $form['enable_users']['#access'] = 0;
  }
  else {
    _sign_for_acknowledgement_users_selection($form);
  }
}

<?php
/**
 * @file
 * Code for the CT Event feature.
 */

include_once 'dvg_ct_event.features.inc';
include_once 'dvg_ct_event.dvg.user_permission.inc';


/**
 * Implements hook_context_callback_info().
 */
function dvg_ct_event_context_callback_info() {
  return array(
    'reactions' => array(
      'dvg_ct_event_event_node_breadcrumb' => array(
        'label' => 'DVG - CT Event node breadcrumb',
        'callback' => 'dvg_ct_event_event_node_breadcrumb',
      ),
    ),
  );
}

/**
 * Callback function that sets the breadcrumb.
 */
function dvg_ct_event_event_node_breadcrumb() {
  $nid = functional_content_nid(_functional_content_item_name('events', 'block_events'));
  _dvg_global_set_breadcrumb_nid($nid, TRUE);
}
